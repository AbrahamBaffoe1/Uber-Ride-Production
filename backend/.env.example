# MongoDB Configuration
MONGODB_URI=your_mongodb_connection_string
MONGODB_RIDER_URI=your_mongodb_rider_connection_string
MONGODB_PASSENGER_URI=your_mongodb_passenger_connection_string

USE_CLOUD_DB=true
OFFLINE_MODE=false
MONGODB_DB_NAME=okada
MONGODB_PASSWORD=your_mongodb_password

# Maps Configuration
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
MAPS_DEFAULT_CENTER_LAT=6.5244
MAPS_DEFAULT_CENTER_LNG=3.3792

# JWT
JWT_SECRET=your_jwt_secret_key
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key
JWT_EXPIRY=30d
JWT_REFRESH_EXPIRY=30d

# Email (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
SMTP_FROM=your_email@gmail.com
SMTP_FROM_NAME=Okada-Ride-Africa

# Twilio Configuration (SMS Fallback)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Payment Gateways
# Flutterwave
FLUTTERWAVE_SECRET_KEY=your_flutterwave_secret_key
FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public_key
FLUTTERWAVE_ENCRYPTION_KEY=your_flutterwave_encryption_key
FLUTTERWAVE_WEBHOOK_HASH=your_flutterwave_webhook_hash

# Paystack
PAYSTACK_SECRET_KEY=your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=your_paystack_public_key
PAYSTACK_WEBHOOK_SECRET=your_paystack_webhook_secret

# Payment General Settings
PAYMENT_CALLBACK_URL=http://localhost:3001/api/v1/payments/callback
PAYMENT_WEBHOOK_URL=http://localhost:3001/api/v1/payments/webhook
PAYMENT_DEFAULT_CURRENCY=GHS

# Security
MASTER_KEY=<your_master_key>

# Server
PORT=3001
NODE_ENV=development

# Admin Default Credentials
ADMIN_DEFAULT_EMAIL=admin@okada-transportation.com
ADMIN_DEFAULT_PASSWORD=Admin123!
ADMIN_DEFAULT_FIRST_NAME=System
ADMIN_DEFAULT_LAST_NAME=Admin
ADMIN_DEFAULT_PHONE=+1234567890

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Socket
SOCKET_CORS_ORIGIN=*

ENABLE_RIDER_MATCHING=true
ENABLE_PAYMENT_PROCESSING=true
ENABLE_REAL_TIME_TRACKING=true
ENABLE_PUSH_NOTIFICATIONS=true

# Redis Configuration (for session, rate limiting, and caching)
REDIS_URL=redis://redis:6379
